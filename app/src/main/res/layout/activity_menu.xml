<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.MenuActivity">

    <Button
        android:id="@+id/button_player_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_vs_cpu"
        app:layout_constraintBottom_toTopOf="@id/button_cpu_mode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="launchPlayerMode"/>

    <Button
        android:id="@+id/button_cpu_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cpu_vs_cpu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="launchCPUMode"/>

</androidx.constraintlayout.widget.ConstraintLayout>